<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_dish_detail_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".view.fragments.DishDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_dish_image"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/imageViewDishImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_500"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:background="@drawable/favourite_button_background"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/imageViewFavouriteDish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_favourite_unselected" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_dish_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Dish Title"
            android:textColor="@color/blue_grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Type"
            android:textColor="@color/dark_grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewType"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Category"
            android:textColor="@color/grey_500"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewIngredientsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCategory"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Ingredients"
            android:textColor="@color/dark_grey"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredientsLabel"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Ingredients Value"
            android:textColor="@color/grey_500"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewCookingDirectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredients"
            android:layout_margin="10dp"
            android:text="Direction to Cook"
            android:textColor="@color/dark_grey"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCookingDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCookingDirectionLabel"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Ingredients Value"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCookingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCookingDirection"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/label_estimate_cooking_time"
            android:textColor="@color/grey_500"
            android:textSize="12sp" />

    </RelativeLayout>


</ScrollView>